  <div class="py-5">
    <%= link_to pages_about_path do %>
      <h6 class="centered row brand">Next</h6>
      <h1 class="centered row display-4 text-white d-inline-block next-arrow">About<%= image_tag("link-arrow.svg", alt: "link arrow", class: "pl-3") %></h1>
    <% end %>
  </div>
</section>

